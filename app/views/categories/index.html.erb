<% provide(:title, 'Categories') %>
<h1 class="text-center">Categories</h1>
<div class="text-center my-4">
    <%= link_to "All", categories_path, class: "btn btn-outline-primary btn-cat-top #{'filtering' if params[:status] == nil }" %> 
    <%= link_to "Learned", categories_path(status: "1"), class: "btn btn-outline-primary btn-cat-top #{'filtering' if params[:status] == "1" }" %> 
    <%= link_to "Not yet", categories_path(status: "0"), class: "btn btn-outline-primary btn-cat-top #{'filtering' if params[:status] == "0" }" %> 
</div>
<div class="container">
    <div class="pagination justify-content-center">
        <%= will_paginate %>
    </div> 
    <div class="row">
        <% @categories.each do |category| %>        
            <div class="col-6">
                <div class="card m-2">
                    <div class="card-header">
                        <h5 class="text-left con-left"><%= category.title %></h5>
                        <h6 class="text-right"><%= pluralize(category.words.count, "Word") %></h6>
                    </div>
                    <div class="card-body">
                        <p class="con-left"><%= category.description %></p>
                        <% lesson = current_user.lesson_taken(category.id) %>
                        <% if lesson.nil? %>
                            <%= link_to "Start Lesson", lessons_path(category_id: category.id), method: :post, class: "btn btn-outline-success float-right" %>
                        <% else %>
                            <%= link_to "Show Result", lesson_path(lesson), class: "btn btn-success float-right" %>
                        <% end%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="pagination justify-content-center my-3">
        <%= will_paginate %>
    </div> 
</div>
