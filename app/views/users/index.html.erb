<% provide(:title, 'Users') %>
<div class="form content">
    <h1 class="text-center">List of Users</h1>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
    <div class="container">
    <div class="row my-4">
        <% @users.each do |user| %>            
            <div class="col-6">
                <ul class="users">
                    <li>
                        <%= user_avatar(user, "user-img") %>
                        <%= link_to user.name, user %>
                    </li>
                </ul>
            </div>
        <% end %>
    </div>
    <div class="pagination justify-content-center mt-2">
        <%= will_paginate %>
    </div>
    </div>
</div>