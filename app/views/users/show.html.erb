<% provide(:title, @user.name) %>
<div class="container pt-4">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    User Information
                </div>
                <div class="card-body p-4 text-center">
                    <%= link_to user_avatar(@user, "user-profile"), current_user %><br>
                    <h1 class="card-title"><%= @user.name %></h1>
                    <p  class="card-text"><%= @user.email %><p>          
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="card">
                <div class="card-header">
                    Activity Feed
                </div>
                <div class="card-body">
                    <h1 class="card-title">Nothing to show</h1>     
                </div>
            </div>        
        </div>
    </div>
</div>